# Environment Configuration
# Copy this to .env and update with your values

# Application Settings
DEBUG=True
HOST=127.0.0.1
PORT=8000

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production-please
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Settings
DATABASE_URL=sqlite:///./biometric_auth.db
# For PostgreSQL: postgresql://username:password@localhost/dbname
# For MySQL: mysql+pymysql://username:password@localhost/dbname

# Biometric Settings
BIOMETRIC_THRESHOLD=0.6
FACE_DETECTION_MODEL=hog

# CORS Settings (add your frontend URLs)
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080","http://127.0.0.1:3000"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# File Storage
UPLOAD_DIR=uploads
TEMP_DIR=temp
